@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using System.Security.Claims
@model epicodus_dotnet_rpg.Models.ApplicationUser

<h2>Authentication with Identity</h2>
<hr />
@if (User.Identity.IsAuthenticated)
{
    <p>Hello @User.Identity.Name!</p>
    <img src=@Model.Avatar alt="Player Avatar" width="100px" />
    @using (Html.BeginForm("LogOff", "Account"))
    {
        <input type="submit" class="btn btn-default" value="Log out" />
    }
    
    @Html.BeginForm("EditAvatar",  "Account", FormMethod.Post )
    {
        @Html.HiddenFor(Model => Model.Id)
        @Html.HiddenFor(Model => Model.UserName)
        <p>Avatar Url:</p>
        @Html.EditorFor(Model => Model.Avatar)

        <input type="submit" value="Change Avatar" />
    }


}
else
{
    <p> @Html.ActionLink("Register", "Register") </p>
    <p> @Html.ActionLink("Log in", "Login") </p>

    
}

